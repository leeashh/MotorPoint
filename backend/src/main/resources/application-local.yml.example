# Copia este archivo como 'application-local.yml' y completa con tus valores reales

server:
  port: 8080

spring:
  datasource:
    url: jdbc:mysql://localhost:3306/motorpoint_db
    username: tu_usuario_mysql
    password: tu_password_mysql

  mail:
    username: tu.email@gmail.com
    password: tu-gmail-app-password

jwt:
  secret: tu-jwt-secret-key-minimo-32-caracteres
  expiration: 86400000

paypal:
  client-id: tu-paypal-sandbox-client-id
  client-secret: tu-paypal-sandbox-client-secret

cors:
  allowed-origins: http://localhost:3000,http://localhost:3001

logging:
  level:
    org.springframework.web: DEBUG
    org.hibernate.SQL: DEBUG